  <div class="registration-image">
    <div class="form col-xs-4">
      <h1>Update Info</h1>

        <%= form_for(:users, url: edit_user_path, role:"form") do |f| %>
        <!-- Click submit and the data gets sent to the create action....users_path post hits UsersController update -->

        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>

        <%= f.label :display_name %>
        <%= f.text_field :display_name, class: "form-control" %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form-control" %><br>

      <%= f.submit "Update Account", id: "check-in", class: "btn btn-primary" %>    <% end %>
    </div>
  </div>

