<!-- activity level -->
  <hr>
  <h3>How fit are you? </h3>
  <h4>Select your current fitness level</h4>

  <div>
    <%= f.label(:fitness_level_sedentary) do %>
    <%= f.radio_button(:fitness_level, "1: Sedentary") %><h4> Sedentary </h4>
      : You've heard of exercise
  <% end %> 
  </div>

  <div>
    <%= f.label(:fitness_level_somewhat_ative) do %>
    <%= f.radio_button(:fitness_level, "2: Somewhat Fit") %>
      <p><strong> Somewhat Fit </strong></p>
      <ul> 
        <li> You participate in light exercise or take long walks </li>
      </ul>
    <% end %> 
  </div>
 
  <div>
    <%= f.label(:fitness_level_moderately_fit) do %>
    <%= f.radio_button(:fitness_level, "3: Moderate") %>
      <p><strong> Moderate </strong></p>
      <ul> 
        <li> You exercise 2-3 times a week and push yourself pretty hard </li>
      </ul>
    <% end %> 
  </div>
  
  <div>
    <%= f.label(:fitness_level_crazy_fit) do %>
    <%= f.radio_button(:fitness_level, "4: Diesel Fit") %>
      <p><strong> Diesel Fit </strong></p>
      <ul> 
        <li> You participate in physical sports such as jogging or mountain-biking each day </li>
      </ul>
    <% end %> 
  </div>


